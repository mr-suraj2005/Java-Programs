// sort list a list of elements in ascending and decending order and showing the exception handling  
import java.util.*;
class sorting
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    
	   // creating Lists
		List<Integer> numbers = new ArrayList<>();
		System.out.println("Enter the range : ");
		int n = sc.nextInt();
		
		// taking input from the user
		System.out.println("Enter numbers::");
		for(int i = 0;i<n;i++){
		    int num = sc.nextInt();
		    numbers.add(num);
		}
		
		try{
		    Collections.sort(numbers);
		    System.out.println("Sorting in ascending numbers :: " + numbers);
		}
		catch(Exception e) {
		    System.out.println("An error occured during ascending order." + e.getMessage());
		}
		
		try {
		    Collections.sort(numbers, Collections.reverseOrder());
		    System.out.println("Sorting in decending numbers :: " + numbers);
	    }
	    catch(Exception e) {
	        System.out.println("An error occured during descending order." + e.getMessage());
	    }
    }
}